<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    version="2.0">
    <!--  RESOURCE_LOCAL -->
    <persistence-unit name="sample.jpa">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <!-- Add JPA model classes here:
        
        <class>...fully-qualified class #1 name...</class> 
        <class>...fully-qualified class #2 name...</class>
        
        -->        
        <class>net.wapwag.wemp.dao.model.Area</class>
        <class>net.wapwag.wemp.dao.model.ObjectEntity</class>
        <class>net.wapwag.wemp.dao.model.Organization</class>
        <class>net.wapwag.wemp.dao.model.Province</class>
        <class>net.wapwag.wemp.dao.model.RoleType</class>
        <class>net.wapwag.wemp.dao.model.User</class>
        <class>net.wapwag.wemp.dao.model.UserOrganizationRole</class>
        <class>net.wapwag.wemp.dao.model.WaterManagementAuthority</class>
        <class>net.wapwag.wemp.dao.model.ObjectOrganizationScope</class>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
			<property name="hibernate.connection.driver_class" value="org.h2.Driver"/>
			<property name="hibernate.connection.url" value="jdbc:h2:mem"/>
			<property name="hibernate.hbm2ddl.auto" value="create"/>
			<property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
