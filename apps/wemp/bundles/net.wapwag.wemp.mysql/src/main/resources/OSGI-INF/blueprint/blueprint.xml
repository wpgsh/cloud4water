<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <bean id="dataSource" class="com.mysql.jdbc.jdbc2.optional.MysqlDataSource">
    <!-- TODO make H2 URL configurable via JVM system properties -->
    <property name="URL" value="jdbc:mysql://localhost:3306/wpg_wemp"/>
    <property name="user" value="wpg"/>
    <property name="password" value="wpg"/>
  </bean>

  <service interface="javax.sql.DataSource" ref="dataSource">
    <service-properties>
      <entry key="osgi.jndi.service.name" value="jdbc/WaterEquipment"/>
    </service-properties>
  </service>

</blueprint>
